@model ViagemTour.Models.Contato


@{
    ViewData["Title"] = "Contato";
}

<h1>Contato</h1>

<form asp-action="Contato" method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome: </label>
        <input class="form-control" asp-for="Nome" placeholder="Joaquim"/>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email: </label>
        <input class="form-control" asp-for="Email" placeholder="Kinzinho@mail.com"/>
    </div>
    <div class="form-group">
        <label asp-for="Mensagem">Mensagem: </label>
        <textarea class="form-control" rows="10" asp-for="Mensagem" placeholder="Deixe aqui sua mensagem de contato..."></textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
</form>